<div class="container">
    <div class="well">
        <h1>Delete Blog: {{ blog.name }}</h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <p>
                        <a class="btn btn-lg btn-block btn-primary"
                           href="{{ path('blog_front_end_list') }}">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            Back to Blogs
                        </a>
                    </p>
                </div>
                <div class="col-md-3 col-md-offset-6">
                    <p>
                        <a class="btn btn-lg btn-block btn-primary"
                           href="{{ path('blog_front_end_modify', {'blogId':blog.id}) }}">
                            <i class="glyphicon glyphicon-pencil"></i>
                            Edit this Blog
                        </a>
                    </p>
                </div>
            </div>

            {% if blog.isPublished == '1' %}
                {% set status = "success" %}
                {% set content = "This blog is published and available to the public." %}
            {% else %}
                {% set status = "danger" %}
                {% set content = "This blog is not published and not available to the public." %}
            {% endif %}

            <div class="panel panel-{{ status }}">
                <div class="page-title">Publication Status:</div>
                <div class="label label-{{ status }}">
                    {{ content }}
                </div>
            </div>

            <div class="row">
                <div class="profile-content-container">
                    <div class="col-md-12">
                        <div class="well">
                            <h3>Blog Name: {{ blog.name }}</h3>
                            <div class="panel panel-default">
                                <div class="page-header">Blog Description:</div>
                                <div class="panel-body">
                                    {{ blog.description }}
                                </div>
                            </div>
                            <div>
                                <h4>
                                    Created On:
                                    {{ blog.createdDate|date("F jS \\@ g:ia") }}
                                </h4><h4>
                                    Last Updated:
                                    {{ blog.lastUpdatedDate|date("F jS \\@ g:ia") }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 col-md-offset-9">
                    <p>
                        <a class="btn btn-lg btn-block btn-danger"
                           href="{{ path('blog_api_delete', {'blogId':blog.id}) }}">
                            <i class="glyphicon glyphicon-trash"></i>
                            Delete Blog
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>