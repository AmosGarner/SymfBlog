{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/SymfBlogCore.css') }}">
{% endblock %}

{% block body %}
    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                {% include '@App/App/navigation.html.twig' with {'activePage' : 'Home'}  %}

                <div class="inner cover">

                    <div class="row">
                        <div class="col-md-5">
                            <div class="panel panel-default">
                                <div class="panel-heading">Recently Published Blogs</div>
                                <div class="panel-body">
                                    <div class="well">
                                        <table class="table table-bordered">
                                            <thead></thead>
                                            <tbody>
                                            {% for blog in blogs %}
                                                <tr>
                                                    <td>
                                                        <a href="{{ path('blog_front_end_read', {'blogId': blog.id}) }}">
                                                            {{ blog.name }}
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 col-md-offset-2">
                            <div class="panel panel-default">
                                <div class="panel-heading">New Authors</div>
                                <div class="panel-body">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}